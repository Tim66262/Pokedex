<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.brippp.pokedex">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pokedexicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pokedexicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityListe"
            android:label="List"
            android:screenOrientation="portrait" />
        <activity android:name=".ActivityEinzelansicht"
            android:label="Info's"
            android:screenOrientation="portrait" />
        <activity android:name=".ActivityFavoriten"
            android:label="Favorites"
            android:screenOrientation="portrait" />
    </application>

</manifest>